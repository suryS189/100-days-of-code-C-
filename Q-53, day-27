// program to print the following pattern:
*
***
*****
*******
*********
*******
*****
***
*

#include <stdio.h>

int main() {
    int rows = 5;  // maximum number of stars in the middle row (odd)

    // Upper part of the diamond
    for(int i = 1; i <= rows; i++) {
        int stars = 2 * i - 1;  // 1, 3, 5, 7, 9
        for(int j = 1; j <= stars; j++) {
            printf("*");
        }
        printf("\n");
    }

    // Lower part of the diamond
    for(int i = rows - 1; i >= 1; i--) {
        int stars = 2 * i - 1;  // 7, 5, 3, 1
        for(int j = 1; j <= stars; j++) {
            printf("*");
        }
        printf("\n");
    }

    return 0;
}
