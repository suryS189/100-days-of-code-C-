// program to input an integer and check whether it is even or odd using ifâ€“else

#include <stdio.h>

int main() 
{
    int num;
    printf("enter a number: ");
    scanf("%d", &num);
    if(num % 2 == 0)
    {
        printf("the entered number is even");
    }
    else
    {
        printf("the entered number is odd");
    }

    return 0;
}
