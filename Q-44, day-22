// program to find the sum of the series: 1 + 3/4 + 5/6 + 7/8 + â€¦ up to n terms.

#include <stdio.h>

int main() {
    int n;
    double sum = 0.0;

    printf("Enter the number of terms: ");
    scanf("%d", &n);

    for(int i = 1; i <= n; i++) {
        int numerator = 2 * i - 1;     // 1, 3, 5, 7, ...
        int denominator = 2 * i;       // 2, 4, 6, 8, ...
        sum += (double)numerator / denominator;
    }

    printf("Sum of the series up to %d terms = %.2lf\n", n, sum);

    return 0;
}
