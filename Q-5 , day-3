// Program to convert temperature from celcius to fahrenheit

#include <stdio.h>
int main()
{
    float c,f;     // c=celcius , f=fahrenheit

    // Input temperature in Celsius
    printf("Enter temperature in Celsius: ");
    scanf("%f", &c);

    // Conversion formula
    f = (c * 9 / 5) + 32;

    // Display result
    printf("%.2f Celsius = %.2f Fahrenheit\n", c, f);

    return 0;
}
