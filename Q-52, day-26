// program to print the following pattern:

*

*
*
*

*
*
*
*
*

*
*
*

*

#include <stdio.h>

int main() {
    int pattern[] = {1, 3, 5, 3, 1};   // number of stars in each group
    int n = 5;                          // total groups

    for(int i = 0; i < n; i++) {
        for(int j = 0; j < pattern[i]; j++) {
            printf("*\n");             // print stars vertically
        }
        printf("\n");                   // blank line after each group
    }

    return 0;
}
