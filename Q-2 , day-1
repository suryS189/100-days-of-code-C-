// Write a program to input two numbers and display their sum, difference, product, and quotient.

#include <stdio.h>
int main() 
{
    int a,b,sum,diff,pro,quot;
    // asking the user to input 2 numbers
    printf("enter first number: ");
    scanf("%d", &a);
    printf("enter second number: ");
    scanf("%d", &b);
    
    // now calculating their sum
    sum = a+b;
    printf("the sum the numbers is %d\n", sum);
    // calculating their difference
    diff = a-b;
    printf("the difference of the numbers is %d\n", diff);
    // calculating product
    pro = a*b;
    printf("the product of the numbers is %d\n", pro);
    // calculating quotient
    quot = a/b;
    printf("the quotient of the numbers is %d\n", quot);
    return 0;
}
