// program to find the roots of a quadratic equation and categorize them.

#include <stdio.h>
#include <math.h>  // For sqrt()

int main()
{
    float a, b, c, discriminant, root1, root2;

    // Input coefficients
    printf("Enter coefficients a, b and c of quadratic equation (ax^2 + bx + c = 0):\n");
    scanf("%f %f %f", &a, &b, &c);

    // Check if 'a' is zero
    if (a == 0)
    {
        printf("This is not a quadratic equation (a cannot be 0).\n");
    } 
    else 
    {
        // Calculate discriminant
        discriminant = (b * b) - (4 * a * c);

        // Categorize roots
        if (discriminant > 0)
        {
            root1 = (-b + sqrt(discriminant)) / (2 * a);
            root2 = (-b - sqrt(discriminant)) / (2 * a);
            printf("Roots are Real and Distinct: %.2f and %.2f\n", root1, root2);
        }
        else if (discriminant == 0)
        {
            root1 = root2 = -b / (2 * a);
            printf("Roots are Real and Equal: %.2f and %.2f\n", root1, root2);
        }
        else
        {
            float realPart = -b / (2 * a);
            float imaginaryPart = sqrt(-discriminant) / (2 * a);
            printf("Roots are Imaginary and Complex: %.2f + %.2fi and %.2f - %.2fi\n",
                   realPart, imaginaryPart, realPart, imaginaryPart);
        }
    }

    return 0;
}
