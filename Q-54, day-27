// program to print the following pattern:

   *
  ***
 *****
*******
 *****
  ***
   *

#include <stdio.h>

int main() {
    int n = 4;  // number of rows in the upper half (excluding middle)

    // Upper part including middle row
    for(int i = 1; i <= n; i++) {
        // Print spaces
        for(int j = 1; j <= n - i; j++) {
            printf(" ");
        }
        // Print stars
        for(int k = 1; k <= 2*i - 1; k++) {
            printf("*");
        }
        printf("\n");
    }

    // Lower part
    for(int i = n - 1; i >= 1; i--) {
        // Print spaces
        for(int j = 1; j <= n - i; j++) {
            printf(" ");
        }
        // Print stars
        for(int k = 1; k <= 2*i - 1; k++) {
            printf("*");
        }
        printf("\n");
    }

    return 0;
}
