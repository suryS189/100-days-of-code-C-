//  Write a program to calculate the area and circumference of a circle given its radius.

#include <stdio.h>
#define PI 3.14159  // defining value of pi

int main() 
{
    float rad;
    float circum, area;

    // asking the user to input radius of circle
    printf("enter radius of circle: ");
    scanf("%f", &rad);
    
    // calculating circumference of circle
    circum = 2 * PI * rad;
    printf("the circumference of the circle is %f\n", circum);

    // calculating aera of circle
    area = PI * rad * rad;
    printf("the area of the circle is %f\n", area);
    return 0;
}
