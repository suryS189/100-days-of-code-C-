// program to find the sum of the series: 2/3 + 4/7 + 6/11 + 8/15 + ... up to n terms.

#include <stdio.h>

int main() {
    int n;
    double sum = 0.0;
    int numerator, denominator;

    printf("Enter the number of terms: ");
    scanf("%d", &n);

    numerator = 2;    // first numerator
    denominator = 3;  // first denominator

    for(int i = 1; i <= n; i++) {
        sum += (double)numerator / denominator;

        numerator += 2;       // next even number
        denominator += 4;     // denominator increases by 4 each term
    }

    printf("Sum of the series up to %d terms = %.4lf\n", n, sum);

    return 0;
}
